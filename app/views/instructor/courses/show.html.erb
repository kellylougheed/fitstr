<br>
<div class="box col-xs-10 col-xs-offset-1">
  <h1><%= @course.title %></h1>
  <div class="pull-right">
    <%= link_to 'Add a new section', new_instructor_course_section_path(@course), class: 'btn btn-sunset pull-right' %>
    <br><br>
    <%= link_to 'Preview as student', course_path(@course), class: 'btn btn-sunset pull-right' %>
  </div>
  <br>
  <ul>
    <% @course.sections.each do |section| %>
      <li><%= section.title %></li>
    <% end %>
  </ul>
</div>